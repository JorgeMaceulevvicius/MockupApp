<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"

    tools:context=".Fragments.MarketFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_alignParentTop="true"
        android:id="@+id/imageViewFisrt">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewFisrt"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0.2"
        android:background="@color/white"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the title"
            android:layout_marginTop="20px"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="30px"
            android:id="@+id/tvTitleMarket"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is Location"
            android:layout_marginTop="20px"
            android:textSize="14dp"
            android:textColor="@color/background"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:id="@+id/tvLocationMarket"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_below="@id/linearLayout"
        android:id="@+id/imageViewSecond"
        android:layout_alignParentBottom="true"
        >
    </ImageView>

</LinearLayout>